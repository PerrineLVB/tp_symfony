{% extends 'base.html.twig' %}

{% block title %}Hello AddCategoryController !
{% endblock %}


{% block body %}
	<div class="container mt-5 w-75">
		<h1 class="text-center">Add new category</h1>
		{{form_start(form)}}
		<div class="row">
			{{form_row(form.name)}}
		</div>
		<div class="row">{{form_row(form.games)}}</div>
		<div class="row text-center">
			<div class="col">
				{{form_row(form.save)}}
			</div>
			<div class="col">
				{{form_row(form.reset)}}
			</div>
		</div>
		{{form_end(form)}}
	</div>
{% endblock %}
